---
import BaseLayout from '../layouts/BaseLayout.astro'
import { buttonVariants } from '../components/ui/button'
import { Image } from 'astro:assets'
import getAllPokemon from '../services/getAllPokemon'

const pokemon = await getAllPokemon()

console.log(pokemon)
---

<BaseLayout
  title="PokeWordle"
  description="This template helps you build apps with Astro, Tailwind CSS, and Shadcn UI."
>
  <section class="mt-32 flex flex-col items-center justify-center px-8">
    <div class="flex max-w-[980px] flex-col items-center gap-2">
      <Image
        src={'/logo.png'}
        alt={'Pokewordle logo'}
        width={120}
        height={120}
      />
      <h1
        class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl"
      >
        PokeWordle
      </h1>
      <p class="mb-8 max-w-[700px] text-lg text-muted-foreground">
        You have 5 attempts to guest the Pokemon!
      </p>
    </div>
    <div class="flex flex-col gap-4">
      <a href="/play" class={buttonVariants()}> Play </a>
      <div>
        <a
          href="https://github.com/Rafacv23/pokewordle"
          target="_blank"
          rel="noreferrer"
          class={buttonVariants({ variant: 'outline' })}
        >
          GitHub
        </a>
        <a href="/rules" class={buttonVariants({ variant: 'outline' })}>
          Rules
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
